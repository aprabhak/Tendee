<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fake9.tendee.Make_AppointmentActivity">

    <Spinner
        android:id="@+id/week_spinner"
        android:layout_width="243dp"
        android:layout_height="27dp"

        android:layout_alignEnd="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/textView3"
        android:layout_alignTop="@+id/week_spinner"
        android:text="Select Date" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Select Time" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="244dp"
        android:layout_height="29dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/week_spinner"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="73dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/week_spinner"
        android:layout_marginStart="34dp"
        android:layout_marginTop="57dp"
        android:text="You are almost done" />

</RelativeLayout>